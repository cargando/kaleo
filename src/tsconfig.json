{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5"
  },
  "include": [
    "./src/**/*",
    "./export/**/*",
    "./types/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.js",
    "**/*.jsx"
  ]
}
